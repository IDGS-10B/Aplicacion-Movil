<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeRegister.Login">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Iniciar Sesión" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

            <Entry x:Name="txtEmployeeNumber" Placeholder="Número de Empleado" />
            <Entry x:Name="txtPassword" Placeholder="Contraseña" IsPassword="True" />

            <Button Text="Iniciar Sesión" Clicked="btnLogin_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>